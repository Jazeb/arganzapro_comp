<%- include('header.ejs') %>
  <%- include('navbar.ejs') %>

    <div class="container-fluid">


      <body>
        <div>
          <form class="form-inline" method="post" action="/gamesSummary">
            <label style="margin-left:12px; margin-top:5px;" for="startDate">From</label>
            <input style="margin-left:12px; margin-top:5px;" type="date" class="form-control" id="startDate"
              name="startDate">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-th"></span>
            </div>
            <br>
            <!-- <div> -->
            <label style="margin-left:12px; margin-top:5px;" for="endDate">To</label>
            <input style="margin-left:12px; margin-top:5px;" type="date" class="form-control" id="endDate"
              name="endDate">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-th"></span>
            </div>
            <!-- </div> -->
            <!-- <input class="form-control mr-sm-2" id="nickName" name="nickName" type="search" placeholder="Nickname" aria-label="Search" /> -->
            <button style="margin-left:12px; margin-top:5px;" class="btn btn-outline-success my-2 my-sm-0"
              type="submit">Search</button>
            <!-- <p></p> -->
            <!-- <br /> -->
          </form>
        </div>

        <br>
        <br>
        <p>Total rows: <%= games.length%>
        </p>
        <container>
          <table class="table">
            <thead class="table-dark">
              <tr>

                <th scope="col"> User Id</th>
                <th scope="col"> Nick Name</th>
                <th scope="col"> Discord Name</th>
                <th scope="col"> Total Sessions</th>
                <th scope="col"> Single Sessions</th>
                <th scope="col"> Multi Sessions</th>
                <th scope="col"> Missions Sessions</th>
                <th scope="col"> Tournament Sessions</th>
                <th scope="col"> Wins</th>
                <th scope="col"> Losses</th>
                <th scope="col"> Wins Percent</th>
                <th scope="col"> Avg Daily Sessions</th>
                <th scope="col"> Points Wins</th>
                <th scope="col"> Points Per Sessions</th>
                <th scope="col"> Average Daily Points</th>
                <th scope="col"> Signup </th>


              </tr>
            </thead>

            <tbody>
              <% games.forEach(game=> { %>
                <tr>
                  <td>
                    <%= game.userId%>
                  </td>
                  <td>
                    <%= game.user.nickName %>
                  </td>
                  <td>
                    <%= game.user.discordName %>
                  </td>
                  <td>
                    <%= game.totalSessions %>
                  </td>
                  <td>
                    <%= game.singleSessions %>
                  </td>
                  <td>
                    <%= game.multiSessions %>
                  </td>
                  <td>
                    <%= game.missionsSessions %>
                  </td>
                  <td>
                    <%= game.tournamentSessions %>
                  </td>
                  <td>
                    <%= game.wins %>
                  </td>
                  <td>
                    <%= game.lose %>
                  </td>
                  <td>
                    <%= game.winsPercent %>
                  </td>
                  <td>
                    <%= game.avgDailySessions %>
                  </td>
                  <td>
                    <%= game.totalPoints %>
                  </td>
                  <td>
                    <%= game.pointsPerSession %>
                  </td>
                  <td>
                    <%= game.avgDailyPoint%>
                  </td>
                  <td>
                    <%= new Date(game.createdAt).toISOString()%>
                  </td>

                </tr>
                <% }); %>

            </tbody>

          </table>
        </container>
      </body>

    </div>
    <script type="text/javascript" src="./javascripts/script.js"></script>